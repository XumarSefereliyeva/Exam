@using ImtahanProyekt.DAL.Models
@model List<Team>
            <!-- Navbar End -->
            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Basic Table</h6>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Position</th>
                                        <th scope="col">ImgUrl</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Position</td>
                                <td><img src="~/assets/UploadedImages/@item.ImgUrl"/></td>
                                <button>
                                <td><a asp-controller="Team" asp-action="Info" asp-route-id="@item.Id">Info</a></td></button>

                                <button>
                                <td><a asp-controller="Team" asp-action="Update" asp-route-id="@item.Id">Update</a></td></button>

                                <button>
                                <td><a asp-controller="Team" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td></button>
                               
                            </tr>
                                    }
                        <button><a asp-controller="Team" asp-action="Create">Create</a></button>
                                  
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Table End -->
           